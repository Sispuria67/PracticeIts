public static void diceSum(){
    Scanner scanner = new Scanner(System.in); 
    Random rand = new Random(); 
    Random s = new Random();
    System.out.print("Desired dice sum: "); 
    int desire = scanner.nextInt(); 
    int sum = 0;
    
   while(sum != desire){
    
     int first = rand.nextInt(6) + 1; 
     int second = s.nextInt(6) + 1;
     sum = first + second; 
     System.out.println(first +" and "+ second+ " = " + sum);
    
    
}
  
}
